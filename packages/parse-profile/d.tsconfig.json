{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dist",
    "skipLibCheck": true,
    "emitDeclarationOnly": true,
    "outDir": ".",
    "strict": true,
    "moduleResolution": "node",
    "composite": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "target": "es2017",
    "lib": ["es2017"]
  },
  "exclude": [
    "tests"
  ]
}