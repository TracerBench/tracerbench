{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "newLine": "LF",
    "moduleResolution": "node",
    "module": "commonjs",
    "resolveJsonModule": true,
    "target": "es2017",
    "outDir": "./dist"
  }
}
