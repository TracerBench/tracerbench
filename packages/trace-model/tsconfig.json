{
  "compilerOptions": {
    "types": [],
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "newLine": "LF",
    "moduleResolution": "node",
    "module": "commonjs",
    "resolveJsonModule": true,
    "preserveConstEnums": true,
    "target": "es2017",
    "outDir": "dist",
    "rootDir": "src",
    "lib": ["ES2017"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"],
  "references": [
    {
      "path": "../trace-event"
    }
  ]
}
